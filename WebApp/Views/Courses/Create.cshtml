@using WebApp.Models
@model CourseRegistrationFormViewModel

<form asp-action="Create" asp-controller="Courses" method="post">
    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" />
    </div>
    <div>
        <label asp-for="Author"></label>
        <input asp-for="Author" />
    </div>
    <div>
        <label asp-for="Price"></label>
        <input asp-for="Price" />
    </div>
    <div>
        <label asp-for="DiscountPrice"></label>
        <input asp-for="DiscountPrice" />
    </div>
    <div>
        <label asp-for="Hours"></label>
        <input asp-for="Hours" />
    <div>
        <label asp-for="BestSeller"></label>
        <input asp-for="BestSeller" />
    </div>
    <div>
        <label asp-for="LikesInProcent"></label>
        <input asp-for="LikesInProcent" />
    </div>
    <div>
        <label asp-for="LikesInNumbers"></label>
        <input asp-for="LikesInNumbers" />
    </div>

    <button type="submit">CREATE</button>
</form>

